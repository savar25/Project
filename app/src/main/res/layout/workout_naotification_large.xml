<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="256dp"
    android:id="@+id/rel_note"
    android:background="#00ff00">

    <TextView
        android:id="@+id/expand_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Workout Status"
        android:textColor="#ff0000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/note_steps"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/counter_background"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/note_cals"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/note_steps"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/note_steps"
        android:text="0"
        android:background="@drawable/counter_background"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/note_steps"
        android:layout_alignStart="@+id/note_steps"
        android:layout_below="@+id/note_steps"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-50dp"
        android:text="Steps"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/note_cals"
        android:layout_alignStart="@+id/note_cals"
        android:layout_below="@+id/note_cals"
        android:layout_marginEnd="-10dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Calories Burnt" />


</RelativeLayout>